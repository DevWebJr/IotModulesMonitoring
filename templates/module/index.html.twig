{% extends 'layouts/base.html.twig' %}

{% block title %}Tous les modules{% endblock %}

{% block body %}
    <a href="{{ path('app_module_new') }}" title="Ajouter un module"><span class="symbol">&#43;</span></a>
    <div class="container-fluid d-flex justify-content-center mt-5 rounded-3 border-primary data-display-box">
        {% for module in modules %}
            <div class="card mb-3 text-center m-1 module-item">
                <h3 class="card-header module-item-header">{{ module.item }}</h3>
                <div class="card-body">
                    <h5 class="card-title text-info">Adresse IP : {{ module.ipAddress }}</h5>
                    <div class="dropdown-divider"></div>
                    <h6 hidden class="card-subtitle text-muted">{{ module.id }}</h6>
                </div>
                <div class="card-body">
                    <a href="{{ path('app_module_show', { id: module.id }) }}" class="card-link">Voir la fiche compl√®te</a>
                </div>
            </div>
            {% else %}
            <div colspan="5" class="text-primary">no records found</div>
        {% endfor %}
    </div>
{% endblock %}

